{
  "dashboard": {
    "id": null,
    "title": "NaidiZakupku - Application Monitoring",
    "tags": ["naidizakupku", "spring-boot", "telegram", "gigachat"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes / jvm_memory_max_bytes * 100",
            "legendFormat": "Memory Usage %"
          },
          {
            "expr": "process_cpu_usage * 100",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "jvm_threads_live_threads",
            "legendFormat": "Active Threads"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list"
            }
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count[5m])",
            "legendFormat": "{{method}} {{uri}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec"
          }
        ]
      },
      {
        "id": 3,
        "title": "HTTP Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{uri}}"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)"
          }
        ]
      },
      {
        "id": 4,
        "title": "Telegram Update Processing Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(telegram_update_processing_time_seconds_sum[5m]) / rate(telegram_update_processing_time_seconds_count[5m])",
            "legendFormat": "Average Processing Time"
          },
          {
            "expr": "histogram_quantile(0.95, rate(telegram_update_processing_time_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Processing Time (seconds)"
          }
        ]
      },
      {
        "id": 5,
        "title": "Telegram Commands",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(telegram_commands_total[5m])",
            "legendFormat": "{{command}}"
          }
        ],
        "yAxes": [
          {
            "label": "Commands/sec"
          }
        ]
      },
      {
        "id": 6,
        "title": "GigaChat Request Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(gigachat_request_time_seconds_sum[5m]) / rate(gigachat_request_time_seconds_count[5m])",
            "legendFormat": "{{model}}"
          }
        ],
        "yAxes": [
          {
            "label": "Request Time (seconds)"
          }
        ]
      },
      {
        "id": 7,
        "title": "Cache Hit Ratio",
        "type": "graph",
        "targets": [
          {
            "expr": "cache_gets_total{result=\"hit\"} / cache_gets_total",
            "legendFormat": "{{cache}}"
          }
        ],
        "yAxes": [
          {
            "label": "Hit Ratio",
            "min": 0,
            "max": 1
          }
        ]
      },
      {
        "id": 8,
        "title": "Cache Size",
        "type": "graph",
        "targets": [
          {
            "expr": "cache_size",
            "legendFormat": "{{cache}}"
          }
        ],
        "yAxes": [
          {
            "label": "Cache Size (entries)"
          }
        ]
      },
      {
        "id": 9,
        "title": "Rate Limit Exceeded",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rate_limit_exceeded_total[5m])",
            "legendFormat": "Rate Limit Violations"
          }
        ],
        "yAxes": [
          {
            "label": "Violations/sec"
          }
        ]
      },
      {
        "id": 10,
        "title": "JWT Validation Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(jwt_validation_time_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Validation Time (seconds)"
          }
        ]
      },
      {
        "id": 11,
        "title": "News Parsing Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(news_parsing_time_seconds_sum[5m]) / rate(news_parsing_time_seconds_count[5m])",
            "legendFormat": "{{source}}"
          }
        ],
        "yAxes": [
          {
            "label": "Parsing Time (seconds)"
          }
        ]
      },
      {
        "id": 12,
        "title": "Procurement Searches",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(procurement_searches_total[5m])",
            "legendFormat": "Search Rate"
          }
        ],
        "yAxes": [
          {
            "label": "Searches/sec"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
