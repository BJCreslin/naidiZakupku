<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.22.xsd">

    <changeSet id="1-create-telegram-section-user-table" author="BJCreslin">

        <createTable tableName="telegram_section_user">

            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="state" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="other_data" type="VARCHAR(255)"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="telegram_section_user"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_telegram_section_user_user"/>

        <createIndex
                indexName="idx_telegram_section_user_user_id"
                tableName="telegram_section_user"
                unique="true">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>